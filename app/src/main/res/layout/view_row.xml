<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_marginTop="5dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="85dp"
                                                   tools:layout_editor_absoluteY="10dp"
                                                   tools:layout_editor_absoluteX="8dp">

    <TextView
            android:hint="CurrencyCode"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/countryText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/flagView" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:hint="CurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/currencyText"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/countryText" app:layout_constraintStart_toEndOf="@+id/flagView"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <EditText
            android:hint="Value"
            android:layout_width="88dp"
            android:layout_height="43dp"
            android:inputType="numberDecimal"
            android:textAlignment="viewEnd"
            android:id="@+id/valueText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22dp" android:textStyle="bold"
            android:gravity="end"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/flagView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.024" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>
